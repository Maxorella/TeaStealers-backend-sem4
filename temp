  db:
    container_name: postgres
    restart: always
    build:
      context: ./
      dockerfile: ./build/postgres.Dockerfile
    volumes:
      - type: volume
        source: postgresdb-data
        target: /var/lib/postgresql/data
    env_file:
      - ./.env
    ports:
      - ${DB_PORT}:5432
    networks:
      - ouzi-network